<?xml version="1.0" encoding="utf-8"?>
<executable>
  <category>Chest Imaging Platform.Toolkit.Processing</category>
  <title>GenerateMedianFilteredImage</title>
  <description><![CDATA[Median Filter of a CT volume]]></description>
  <version>0.0.1</version>
  <documentation-url>https://chestimagingplatform.org/processing</documentation-url>
  <license>Slicer</license>
  <contributor> Applied Chest Imaging Laboratory, Brigham and Women's hospital</contributor>
  <acknowledgements>This work is funded by the National Heart, Lung, And Blood Institute of the National \
Institutes of Health under Award Number R01HL116931. The content is solely the responsibility of the authors \
and does not necessarily represent the official views of the National Institutes of Health.
  </acknowledgements>
  <parameters>
    <double>
      <name>radiusValue</name>
      <longflag>radius</longflag>
      <flag>r</flag>
      <label>Radius</label>
      <description><![CDATA[Median filter radius]]></description>
      <default>1.0</default>
    </double>

    <label>IO</label>
    <description><![CDATA[Input/output parameters]]></description>

    <image>
      <name>ctFileName</name>
      <label>Input Filename</label>
      <channel>input</channel>
      <flag>i</flag>
      <longflag>--ict</longflag>
      <description><![CDATA[Input CT file name]]></description>
      <default>q</default>
    </image>

    <image>
      <name>outputFileName</name>
      <label>Output File</label>
      <flag>o</flag>
      <longflag>--oct</longflag>
      <channel>output</channel>
      <description><![CDATA[Output CT file name]]></description>
      <default>q</default>
    </image>

    <directory>
      <name>ctDir</name>
      <flag>d</flag>
      <longflag>--CTDirectory</longflag>
      <label>CT Directory Data</label>
      <channel>input</channel>
      <description><![CDATA[Directory image series]]></description>
      <default>NA</default>
    </directory>

  </parameters>
</executable>
